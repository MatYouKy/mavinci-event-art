{
  "name": "smtp-relay-worker",
  "version": "1.0.0",
  "description": "SMTP Relay Worker for Supabase Edge Functions",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "pm2:start": "pm2 start server.js --name smtp-relay-worker",
    "pm2:restart": "pm2 restart smtp-relay-worker",
    "pm2:stop": "pm2 stop smtp-relay-worker",
    "pm2:logs": "pm2 logs smtp-relay-worker",
    "pm2:status": "pm2 status",
    "deploy": "chmod +x deploy-worker.sh && ./deploy-worker.sh",
    "test": "chmod +x test-local.sh && ./test-local.sh",
    "check": "chmod +x check-config.sh && ./check-config.sh",
    "compare": "chmod +x compare-secrets.sh && ./compare-secrets.sh",
    "config": "chmod +x show-config.sh && ./show-config.sh"
  },
  "dependencies": {
    "express": "^4.18.2",
    "nodemailer": "^6.9.7",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "pm2": "^5.3.0"
  }
}
